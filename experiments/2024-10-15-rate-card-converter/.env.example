# Rate Card Converter - Environment Variables
# Copy this file to .env and fill in real values before running.

# Runtime environment. Valid values: local, azure
ENVIRONMENT=local

# OpenAI API credentials. Required for LLM-based semantic mapping.
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0

# Database connection string.
# Local default uses SQLite via aiosqlite (no server required).
# Azure/production: use postgresql+asyncpg://user:pass@host:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./rate_cards.db

# Directory where uploaded document files are stored during processing.
UPLOAD_DIR=./uploads

# Application log level. Valid values: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Azure Document Intelligence credentials.
# Only required when ENVIRONMENT=azure. Leave blank for local development.
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=
AZURE_DOCUMENT_INTELLIGENCE_KEY=

# Redis / Celery broker URL.
# Only required when ENVIRONMENT=azure for async task processing.
REDIS_URL=redis://localhost:6379/0

# PostgreSQL connection string for Azure deployment.
# Only required when ENVIRONMENT=azure.
POSTGRES_URL=postgresql+asyncpg://user:pass@localhost:5432/rate_cards
